<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.surpass.persistence.mapper.InstitutionsMapper">

	<sql id="where_statement">
    	<if test="id != null and id != ''">
			and	id	=	#{id}
		</if>
		and deleted = 'n'
    </sql>


	<select id="fetchPageResults" parameterType="Institutions" resultType="Institutions">
		select
			*
		from
			surpass_institutions
		where
		1 = 1
		<include refid="where_statement"/>
		order by  sortindex
	</select>
</mapper>
